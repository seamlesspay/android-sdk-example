<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/backgroundColor"
		>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			tools:context=".MainActivity"
			>

		<!--  ...  -->
		<com.google.android.material.tabs.TabLayout
				android:id="@+id/tabLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>
			<com.google.android.material.tabs.TabItem
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="SingleLineForm"
					/>
			<com.google.android.material.tabs.TabItem
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="MutliLineForm"
					/>
		</com.google.android.material.tabs.TabLayout>
		<com.seamlesspay.ui.paymentinputs.direct.SingleLineCardForm
				android:id="@+id/cardSingleLine"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:layout_marginEnd="24dp"
				android:layout_marginStart="24dp"
				android:layout_marginTop="32dp"
				/>
		<com.seamlesspay.ui.paymentinputs.direct.MultiLineCardForm
				android:id="@+id/cardMultiLine"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:layout_marginEnd="24dp"
				android:layout_marginStart="24dp"
				android:layout_marginTop="32dp"
				android:visibility="gone"
				/>
		<Button
				android:id="@+id/tokenizeButton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="20dp"
				android:backgroundTint="@color/seamlesspay_accent_color_default"
				android:text="Tokenize"
				android:textColor="@color/seamlesspay_title_text_color"
				/>
		<Button
				android:id="@+id/payButton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="20dp"
				android:backgroundTint="@color/seamlesspay_accent_color_default"
				android:text="PAY"
				android:textColor="@color/seamlesspay_title_text_color"
				/>
		<Button
				android:id="@+id/refundButton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="20dp"
				android:backgroundTint="@color/seamlesspay_accent_color_default"
				android:text="Refund"
				android:textColor="@color/seamlesspay_title_text_color"
				/>
		<TextView
				android:id="@+id/infoView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="16dp"
				android:layout_marginStart="16dp"
				android:layout_marginTop="16dp"
				/>

		<ProgressBar
				android:id="@+id/progress"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center_horizontal"
				android:visibility="gone"
				/>
		<!--  ...  -->

	</LinearLayout>
</ScrollView>